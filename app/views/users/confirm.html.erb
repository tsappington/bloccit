<h2>Sign Up Confirmation</h2>

<div class="row">
  <div class="col-md-8">

    <h4>Are you sure these values are correct?</h4>

    <ul id="confirm-items">
      <li>Email: <%= @user[:email] %></li>
      <li>Name: <%= @user[:name] %></li>
    </ul>

    <%= button_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-success confirm-action' %>
    <%= button_to "No", new_user_path, class: 'btn btn-secondary confirm-action' %>

  </div>
</div>
